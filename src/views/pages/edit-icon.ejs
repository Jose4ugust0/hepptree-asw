<%- include('../include/header.ejs') %> 

<div class="sign">
    <div class="title">
        <h1>Editar icone de perfil</h1>
    </div>
    <form action="/edit-icon" method="post" enctype="multipart/form-data">
        <div class="input_wrapper">
            <div class="image">
                <img src="" id="preview">
            </div>
            <fieldset>
                <label for="imagem"><h2><i class="fa-solid fa-image"></i><strong>Carregar imagem</strong></h2></label>
                <input type="file" name="icon" id="imagem">
            </fieldset>
            
        </div>
        
        <div class="input_wrapper">
            <fieldset>
                <input type="submit" value="atualizar">
            </fieldset>
        </div>
    </form>
</div>

